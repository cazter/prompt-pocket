{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch",
			"type": "shell",
			"command": "pnpm",
			"args": ["run", "watch"],
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "compile",
			"type": "shell",
			"command": "pnpm",
			"args": ["run", "compile"],
			"problemMatcher": "$tsc",
			"presentation": {
				"reveal": "never"
			},
			"group": "build"
		}
	]
}
